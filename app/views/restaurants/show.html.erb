<h1> <%= @restaurant.name %>  </h1>
<h3>  <%= @restaurant.address %> </h3>
<h3>  <%= @restaurant.category %> </h3>
<h3>  <%= @restaurant.phone_number %> </h3>

<h2>Reviews</h2>


<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
  <li class="list-group-item"> <%= review.content %> <%= "⭐️" * review.rating %>  </li>

  <% end %>
</ul>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
<%= link_to "Return", restaurants_path, class: "btn btn-primary" %>
